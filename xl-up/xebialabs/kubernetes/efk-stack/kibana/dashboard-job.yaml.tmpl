apiVersion: batch/v1
kind: Job
metadata:
  name: kibana-dashboards
  namespace: {{ .Namespace }}
  labels:
    app: kibana-dashboards
spec:
  template:
    spec:
      restartPolicy: OnFailure
      initContainers:
      - name: wait-for-elasticsearch
        image: jgoclawski/wget:1.0
        command:
        - 'sh'
        - '-c'
        - >
          until [ "$(wget {{ if .MonitoringElasticsearchHasAuthentication }}--user {{ .MonitoringElasticsearchUsername }} --password {{ .MonitoringElasticsearchPassword }}{{ end }} -O /dev/null -q --spider -T2 {{ if .MonitoringUseExternalElasticsearch }}{{ .MonitoringElasticsearchUrlScheme }}{{ .MonitoringElasticsearchUrl }}:9200{{ else }}http://elasticsearch-logging.{{- .Namespace }}.svc:9200{{ end }}; echo $?)" == "0" ] ; do
          echo "ElasticSearch is not ready yet";
          sleep 2;
          done
      containers:
      - name: dashboards
        image: "xebialabsunsupported/xl-kibana:1.1.0"
        imagePullPolicy: Always
        env:
          - name: ELASTICSEARCH_URL
            value: "{{ if .MonitoringUseExternalElasticsearch }}{{ .MonitoringElasticsearchUrlScheme }}{{ .MonitoringElasticsearchUrl }}:9200{{ else }}http://elasticsearch-logging.{{- .Namespace }}.svc:9200{{ end }}"
          {{- if .MonitoringElasticsearchUsername }}
          - name: ELASTICSEARCH_USERNAME
            value: "{{ .MonitoringElasticsearchUsername }}"
          - name: ELASTICSEARCH_PASSWORD
            value: "{{ .MonitoringElasticsearchPassword }}"
          {{- end }}
          - name: KIBANA_URL
            value: "http://kibana-logging.{{- .Namespace }}.svc:5601"
      imagePullSecrets:
        - name: xebialabs-pull-secret