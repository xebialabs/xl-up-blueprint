apiVersion: xl-deploy/v1
kind: Deployment
spec:
  package: Applications/XEBIALABS/XL-K8S-FOUNDATION/K8s-NameSpace/1.0
  environment: Environments/XEBIALABS/K8S
---
apiVersion: xl-deploy/v1
kind: Deployment
spec:
  {{if .useCustomRegistry}}
  package: Applications/XEBIALABS/XL-K8S-FOUNDATION/Answers-Configmap-Deployment/{{.xlrTag}}-{{.xldTag}}
  {{else}}
  package: Applications/XEBIALABS/XL-K8S-FOUNDATION/Answers-Configmap-Deployment/{{.xlVersion}}
  {{end}}
  environment: Environments/XEBIALABS/K8S
  orchestrators:
    - sequential-by-dependency
{{- if .InstallXLD }}
---
apiVersion: xl-deploy/v1
kind: Deployment
spec:
  {{if .useCustomRegistry}}
  package: Applications/XEBIALABS/XL-DEPLOY/XL-Deploy-Deployment/{{.xldTag}}
  {{else}}
  package: Applications/XEBIALABS/XL-DEPLOY/XL-Deploy-Deployment/{{.xlVersion}}
  {{end}}
  environment: Environments/XEBIALABS/K8S
  orchestrators:
    - sequential-by-dependency
{{- end }}
{{- if .InstallXLR }}
---
apiVersion: xl-deploy/v1
kind: Deployment
spec:
  {{if .useCustomRegistry}}
  package: Applications/XEBIALABS/XL-RELEASE/XL-Release-Deployment/{{.xlrTag}}
  {{else}}
  package: Applications/XEBIALABS/XL-RELEASE/XL-Release-Deployment/{{.xlVersion}}
  {{end}}
  environment: Environments/XEBIALABS/K8S
  orchestrators:
    - sequential-by-dependency
{{- end }}